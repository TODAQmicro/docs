---
import { getCollection } from 'astro:content';

import Head from '../components/Head.astro';
import Header from '../components/Header/Header.astro';
import Scripts from '../components/Scripts.astro';
import '../styles/main.css';

const guides = await getCollection('guide');
const references = await getCollection('reference');
---

<!doctype html>
<html lang="en">
  <Head />
  <body>
    <Header />
    
    <main class="home-container">
      <section class="hero">
        <div class="hero-content">
          <h1>Build seamless <span class="text-gradient">payment experiences</span></h1>
          <p class="hero-subtitle">
            Integrate TAPP's powerful payment infrastructure with our comprehensive guides and APIs. 
            Secure, scalable, and developer-first.
          </p>
          <div class="hero-actions">
            <a href="/guide/getting-started/" class="btn btn-primary">Get Started</a>
          </div>
        </div>
        <div class="hero-visual">
            <div class="glow-orb"></div>
        </div>
      </section>
    </main>

    <Scripts />
  </body>
</html>

<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  /* Hero Section */
  .hero {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-8) 0;
    min-height: 500px;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    flex: 1;
    max-width: 600px;
    z-index: 2;
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    font-weight: 800;
    margin-bottom: var(--space-4);
    letter-spacing: -0.02em;
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--color-primary), #ff6b6b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
    margin-bottom: var(--space-6);
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-3);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-5);
    border-radius: var(--border-radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--color-primary-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .btn-secondary {
    background-color: var(--bg-surface);
    color: var(--text-main);
    border: 1px solid var(--border-color);
  }

  .btn-secondary:hover {
    background-color: var(--bg-body);
    border-color: var(--text-muted);
  }

  /* Hero Visual (Abstract) */
  .hero-visual {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: -100px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    pointer-events: none;
  }

  .glow-orb {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(226, 19, 76, 0.15) 0%, rgba(226, 19, 76, 0) 70%);
    border-radius: 50%;
    filter: blur(40px);
  }

  /* Features Section */
  .features {
    padding: var(--space-8) 0;
    margin-bottom: var(--space-8);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
  }

  .feature-card {
    background: var(--bg-surface);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-lg);
    padding: var(--space-5);
    text-decoration: none;
    color: var(--text-main);
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .card-icon {
    font-size: 2rem;
    margin-bottom: var(--space-3);
  }

  .feature-card h3 {
    margin-bottom: var(--space-2);
    font-size: 1.25rem;
    font-weight: 700;
  }

  .feature-card p {
    color: var(--text-muted);
    line-height: 1.5;
    flex-grow: 1;
  }

  /* Dark mode tweaks */
  :global(:root:not([data-theme="light"])) .btn-secondary {
      background-color: transparent;
      border-color: var(--border-color);
  }
  
  :global(:root:not([data-theme="light"])) .btn-secondary:hover {
      background-color: rgba(255,255,255,0.05);
  }

  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
      padding-top: var(--space-6);
    }
    
    .hero-content {
      max-width: 100%;
    }

    .hero-actions {
      justify-content: center;
    }
    
    .hero-visual {
      display: none;
    }
    
    h1 {
      font-size: 2.5rem;
    }
  }
</style>
